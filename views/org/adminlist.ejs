<%for(var i=0;i<admins.length;i++){%>
<div class="row">
    <div class="col-md-3">
        <img src="../img/user.jpg" class="img-rounded"  style="width: 30px;height: 30px;">
    </div>
    <div class="col-md-3">
        <p><%=admins[i].username%></p>
    </div>
    <div class="col-md-3">
        <p><%=admins[i].fname%></p>
    </div>
    <div class="col-md-3">
        <%if(admins[i].id===uresult[0].id){%>
        <button type="button" onclick="ajaxFunction(<%= admins[i].id %>)" class="btn btn-danger btn-sm" disabled>Remove</button>
        <%}else{%>
        <button type="button" onclick="ajaxFunction(<%= admins[i].id %>)" class="btn btn-danger btn-sm" >Remove</button>

        <%}%>
    </div>
</div>
<%}%>
<hr>
<div class="row">
    <div class="col-md-10">
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-3 col-form-label">Make a admin</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="userid" placeholder="User id">
                <%if(isvalid==1){%>
                <small id="emailHelp" class="form-text text-muted">Enter the user id of the user to make an admin.</small>
                <%}else if(isvalid==0) {%>
                <div class="alert alert-danger">
                    <strong>Invalid user id!</strong> You entered user id is invalid.
                </div>
                <%}else if(isvalid==2){%>
                <div class="alert alert-danger">
                    <strong>Opps!</strong> User is already an admin.
                </div>
                <%}%>
            </div>
        </div>

    </div>
    <div class="col-md-2">
        <button type="button" class="btn btn-primary" onclick="addAdmin()">Add</button>
    </div>
</div>