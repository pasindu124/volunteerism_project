<!--Wall with Post -->
<div class="content-posts active" id="posts">
    <div id="posts-container" class="container-fluid container-posts">

        <div class="card-post">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-0" >
                    <h2>Make your organization page..</h2>
                    <br>
                </div>

            </div>

            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <%if(flash){%>
                        <div class="alert alert-success">
                            <strong><%= flash;%></strong> Now you can login as your page.
                        </div>
                    <%}%>
                    <% if(errors){%>

                        <%for(var i=0;i<errors.length;i++){%>
                            <div class="alert alert-danger" role="alert">
                                <%= errors[i]['msg'] %>
                            </div>
                        <%}%>
                    <%}%>

                    <!-- Default form register -->
                    <form action="/organization" method="post" name="oreg" onsubmit="return validate(this)" >


                        <!-- Default input name -->
                        <label for="defaultFormRegisterNameEx" class="grey-text">Organization name</label>
                        <input type="text" id="defaultFormRegisterNameEx" class="form-control" name="name">

                        <br>

                        <!-- Default input email -->
                        <label for="defaultFormRegisterEmailEx" class="grey-text">Organization email</label>
                        <input type="email" id="defaultFormRegisterEmailEx" class="form-control" name="email">

                        <br>

                        <!-- Default input email -->
                        <label for="defaultFormRegisterConfirmEx" class="grey-text">Confirm Organization email</label>
                        <input type="email" id="defaultFormRegisterConfirmEx" class="form-control" name="cemail">

                        <br>

                        <!-- Default input about -->
                        <div class="form-group">
                            <label for="exampleFormControlTextarea1">About Organization</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="about"></textarea>
                        </div>

                        <br>

                        <div class="text-center">
                            <button class="btn btn-unique" type="submit">Register</button>
                        </div>
                    </form>
                    <!-- Default form register -->

                </div>
            </div>

        </div>


    </div>
    <!--Close #posts-container-->
    <!--<div id="loading">-->
        <!--<img src="img/load.gif" alt="loader">-->
    <!--</div>-->
</div>
<!-- Close #posts -->
<!-- Modal container for settings--->
<div id="settingsmodal" class="modal fade text-center">
    <div class="modal-dialog">
        <div class="modal-content">
        </div>
    </div>
</div>


<!-- SCRIPTS -->
<script>
    function validate(form) {
        var name = document.forms["oreg"]["name"].value;
        var email = document.forms["oreg"]["email"].value;
        var about = document.forms["oreg"]["about"].value;
        //alert("Organization name: "+ name + " Organization email: "+ email+ " About Organization : "+ about);


        if (confirm(" Organization name: "+ name + "\n Organization email: "+ email+ "\n About Organization : "+ about+"\n Are you sure to create the organization?")) {
            return true;
        } else {
            return false;
        }

        //return confirm('Do you really want to submit the form?');

    }
</script>
